<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="itemLinearLayout" parent="android:Theme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/white_general_background</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="noticeTextView" parent="android:Theme">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:marqueeRepeatLimit">-1</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:text">提示文本样式</item>
    </style>

    <style name="titleTextView" parent="android:Theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">标题文本样式</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="defaultTextEditor" parent="android:Theme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/Transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:hint">编辑框样式</item>
        <item name="android:textColorHint">@color/black</item>

    </style>




</resources>